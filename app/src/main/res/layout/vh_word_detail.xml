<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:orientation="horizontal">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@color/transparent"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:padding="3dp"
        android:src="@drawable/arrow_left"
        android:visibility="invisible"
        android:contentDescription="@string/previous_word" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:background="@drawable/rounded_bg">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/container_buttons">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <com.jehutyno.yomikata.furigana.FuriganaView
                    android:id="@+id/furi_word"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:paddingEnd="20dp"
                    android:paddingStart="20dp"
                    android:textColor="@color/lighter_gray"
                    android:textSize="28sp" />

                <TextView
                    android:id="@+id/text_traduction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="5dp"
                    android:textColor="@color/lighter_gray"
                    android:textSize="20sp"
                    tools:text="(n) next week" />


                <LinearLayout
                    android:id="@+id/container_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/composition"
                        android:textColor="@color/colorAccent" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginBottom="4dp"
                    android:text="@string/example"
                    android:textColor="@color/colorAccent" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/image_sentence_jap"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="5dp"
                        android:src="@drawable/ic_sentence_jap"
                        android:contentDescription="@string/japanese_sentence" />

                    <com.jehutyno.yomikata.furigana.FuriganaView
                        android:id="@+id/furi_sentence"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/lighter_gray"
                        android:textSize="18sp"
                        tools:text="Test" />

                    <ImageButton
                        android:id="@+id/btn_sentence_tts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="48dp"
                        android:minHeight="48dp"
                        android:layout_gravity="center"
                        android:background="@color/transparent"
                        android:foreground="?attr/selectableItemBackground"
                        android:padding="5dp"
                        android:src="@drawable/ic_volume_circled"
                        android:contentDescription="@string/sentence_audio" />

                </LinearLayout>

                <TextView
                    android:id="@+id/text_sentence_en"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:layout_gravity="start"
                    android:paddingStart="5dp"
                    android:textColor="@color/lighter_gray"
                    android:textSize="18sp"
                    android:drawablePadding="5dp"
                    tools:text="I would like to see you next week."
                    app:drawableLeftCompat="@drawable/ic_sentence_en"/>

            </LinearLayout>

        </ScrollView>

        <ImageView
            android:id="@+id/level_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/close"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="12dp"
            android:src="@drawable/ic_arrow_down"
            android:contentDescription="@string/level_down" />

        <ImageView
            android:id="@+id/close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="12dp"
            android:src="@drawable/ic_clear_orange_24dp"
            android:contentDescription="@string/close" />

        <ImageView
            android:id="@+id/level_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/close"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="12dp"
            android:src="@drawable/ic_arrow_up"
            android:contentDescription="@string/level_up" />

        <RelativeLayout
            android:id="@+id/container_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:padding="5dp">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/btn_report">


                <ImageButton
                    android:id="@+id/btn_selection"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="48dp"
                    android:minHeight="48dp"
                    android:background="@color/transparent"
                    android:foreground="?attr/selectableItemBackground"
                    android:padding="10dp"
                    android:src="@drawable/ic_star_black_24dp"
                    android:contentDescription="@string/selections" />

            </FrameLayout>

            <ImageButton
                android:id="@+id/btn_report"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/btn_tts"
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:background="@color/transparent"
                android:foreground="?attr/selectableItemBackground"
                android:padding="10dp"
                android:src="@drawable/ic_report_black_24dp"
                app:tint="@color/lighter_gray"
                android:contentDescription="@string/report_error" />

            <ImageButton
                android:id="@+id/btn_tts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/btn_copy"
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:background="@color/transparent"
                android:foreground="?attr/selectableItemBackground"
                android:padding="10dp"
                android:src="@drawable/ic_volume_up_black_24dp"
                app:tint="@color/lighter_gray"
                android:contentDescription="@string/word_audio" />

            <ImageButton
                android:id="@+id/btn_copy"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentEnd="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_copy"
                app:tint="@color/lighter_gray"
                android:contentDescription="@string/copy_to_clipboard" />

        </RelativeLayout>

    </RelativeLayout>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@color/transparent"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:padding="3dp"
        android:src="@drawable/arrow_right"
        android:visibility="invisible"
        android:contentDescription="@string/next_word" />

</LinearLayout>